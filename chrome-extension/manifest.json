{
  "manifest_version": 3,
  "name": "CalBar Lawyer Data Scraper",
  "version": "1.0",
  "description": "Scrape lawyer contact information from California Bar Association directory",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://apps.calbar.ca.gov/*",
    "https://*.calbar.ca.gov/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CalBar Lawyer Scraper"
  },
  "content_scripts": [
    {
      "matches": ["https://apps.calbar.ca.gov/*", "https://*.calbar.ca.gov/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
